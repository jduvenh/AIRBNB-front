<!DOCTYPE html>
<html>
<head>
    <title>Login App</title>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <div class="container">
      {{!-- <img class="bg1" src="/images/tree.jpg"/>  --}}
      <div class="header clearfix">
        {{!-- <img class="bg1" src="/images/tree.jpg"/>  --}}
        <nav>
          <ul class="nav nav-pills pull-right">
            {{#if user}}
            <li role="presentation"><a href="/">Dashboard</a></li>
            <li role="presentation"><a href="/users/logout">Logout</a></li>
            {{else}}
            <li role="presentation"><a href="/home/home">Home</a></li>
            <li role="presentation"><a href="/users/login">Login</a></li>
            <li role="presentation"><a href="/users/register">Register</a></li>
            {{/if}}
            {{!-- <li role="presentation"><a href="/users/login">Login</a></li> --}}
          </ul>
        </nav>
        <h3 class="text-muted">Nomad</h3>
      </div>

      <div class="row ">
        <div class="col-lg-12">
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}
            
            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}
            
            {{#if error_msg}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            
          {{{body}}}
        </div>
      </div>

      <footer class="footer">
        <p>&copy; 2019 NomadBNB, Inc.</p>
      </footer>

    </div> <!-- /container -->

</body>
</html>